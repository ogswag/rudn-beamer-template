\usecolortheme{RUDNColors}
\useinnertheme{circles}
\setbeamerfont{frametitle}{size=\large,series=\bfseries}

\DeclareOptionBeamer{minimal}{
    \setbeamertemplate{frametitle}
    {
        \nointerlineskip
        \begin{beamercolorbox}[sep=0.3cm,ht=27pt,wd=\paperwidth]{frametitle}
            \vbox{}\vskip-2ex%
            \strut\insertframetitle\strut \hfill {\normalfont \insertframenumber\,/\,\inserttotalframenumber}
            %% \strut\insertframetitle\strut
            \vskip-0.8ex%
        \end{beamercolorbox}
    }
    \logo{\includegraphics[width=2cm]{./img/rudn_logo.png}}
}

\ProcessOptionsBeamer

